pipeline {
  agent any

  environment {
    IMAGE_TAG = "${env.BUILD_NUMBER}"
  }

  stages {
    stage('Checkout') {
      steps {
        echo 'ğŸ”„ Checking out source code...'
      }
    }

    stage('Build') {
      steps {
        echo 'ğŸ—ï¸ Building Docker image...'
        sh 'docker build -t demo-app:${IMAGE_TAG} .'
      }
    }

    stage('Security Scan') {
      steps {
        echo 'ğŸ”’ Scanning image using Trivy...'
        sh 'trivy image demo-app:${IMAGE_TAG} || true'
      }
    }

    stage('Deploy') {
      steps {
        echo 'ğŸš€ Simulated deploy to Kubernetes...'
        sh 'echo "kubectl apply -f deployment.yaml"'
      }
    }
  }

  post {
    success {
      echo "âœ… Pipeline completed successfully!"
    }
    failure {
      echo "âŒ Pipeline failed. Check logs."
    }
  }
}
